<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        backupGlobals="false"
        bootstrap="vendor/autoload.php"
        cacheResult="false"
>
    <php>
        <ini name="error_reporting" value="-1"/>
    </php>

    <testsuites>
        <testsuite name="nuvolapl/cqrs">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>
</phpunit>
